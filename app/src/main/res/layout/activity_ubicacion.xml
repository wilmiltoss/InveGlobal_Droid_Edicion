<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".principal.ventanas.UbicacionActivity">


    <!-- Login progress -->
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btn_conteo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conteo:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="116dp" />

        <TextView
            android:id="@+id/tv_conteo"
            android:layout_width="62dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryNegro"
            android:layout_height="wrap_content"
            android:text="   1" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txtLocacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LocaciÃ³n : "
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/sp_locacion"
            android:layout_width="225dp"
            android:layout_height="match_parent"
            android:background="@drawable/stylo_borde"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/txtTipoSoporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo Soporte : "
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/sp_tipoSoporte"
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:background="@drawable/stylo_borde"
            android:text="" />

        <Button
            android:id="@+id/btn_nroSoporte"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="Nro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="116dp" />

        <TextView
            android:id="@+id/tv_nro_soporte"
            android:layout_width="40dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryNegro"
            android:layout_height="wrap_content"
            android:text="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_Metro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metro :"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="116dp" />

        <TextView
            android:id="@+id/tv_metro"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btn_nivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel :"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="116dp" />

        <TextView
            android:id="@+id/tv_nivel"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="1dp">

        <EditText
            android:id="@+id/txtIdlocacion"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="locacion"
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txtIdSoporte"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txtDescripSoporte"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/txtDescripcionloca"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text=""
            android:textColor="@color/colorPrimaryNegro"
            android:textSize="15dp" />

            <TextView
                android:id="@+id/text_nombreEquipoL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint=""
                android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/text_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btn_hecho"
            android:layout_width="229dp"
            android:layout_height="69dp"
            android:background="@color/colorPrimary"
            android:onClick="onClickHecho"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:text="Hecho"
            android:textColor="@color/colorPrimaryNegro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
      >

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />
    </LinearLayout>
        </LinearLayout>




    </ScrollView>

</LinearLayout>
